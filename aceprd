#cloud-config
hostname: aceprd
fqdn: aceprd.sci-gaia.eu
manage_etc_hosts: true
package_update: true
package_upgrade: true
users:
  - name: aceprd 
    ssh-authorized-keys:
      - ssh-rsa  mario@mario-ThinkPad
      - ssh-rsa 
      - ssh-rsa 
      - ssh-rsa 
      - ssh-rsa 
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    groups: sudo
    shell: /bin/bash
runcmd:
  # Configure ufw
     - sed -i -e '/^IPV6/s/^.*$/IPV6=no/' /etc/default/ufw
     - ufw enable
     - ufw default deny incoming
     - ufw default allow outgoing
     - ufw allow ssh

# Reboot
power_state:
     timeout: 120
     delay: "+1"
     message: Rebooting in 1 minute. Please save your work.
     mode: reboot

